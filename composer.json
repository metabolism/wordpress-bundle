{
  "name":"metabolism/wordpress-bundle",
  "license": "AGPL-3.0",
  "version": "1.0.x",
  "description": "Wordpress SF bundle",
  "license": "GPL-3.0-or-later",
  "require": {
    "php" : ">=5.6.0",
    "metabolism/wordpress-core-installer": "1.0.x-dev",
    "metabolism/package-actions": "1.0.x-dev",
    "johnpbloch/wordpress-core": "4.9.*",
    "ifsnop/mysqldump-php":"2.*",
    "elliotcondon/advanced-custom-fields-pro": "5.*",
    "gummi/acf-component-field": "1.*"
  },
  "extra": {
    "post-package-install": {
      "create": {
        "metabolism/wordpress-bundle": {
          "web/uploads": 777,
          "vendor/wordpress/upgrade": 777,
          "vendor/wordpress/languages": 777,
          "config/acf-json": 777
        }
      },
      "copy": {
        "metabolism/wordpress-bundle": {
          "tools/wp-config.php": "web/wp-config.php",
          "doc/wordpress.sample.yml": "config/wordpress.yml"
        }
      },
      "symlink": {
        "metabolism/wordpress-bundle": {
          "doc": "doc/wordpress-bundle",
          "tools/mu-plugin.php": "vendor/wordpress/mu-plugins/wordpress-bundle.php"
        }
      },
      "remove": {
        "metabolism/wordpress-bundle": [
          "config/silex.yml"
        ]
      }
    },
    "branch-alias": {
      "dev-1.0.x": "1.0.x-dev"
    }
  },
  "autoload" : {
    "psr-4" : {
      "Metabolism\\WordpressBundle\\" : "src/"
    }
  }
}
